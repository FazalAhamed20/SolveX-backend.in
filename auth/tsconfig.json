{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "..", // Set rootDir to the parent directory
    "removeComments": false,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "common/*": ["common/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "common/**/*" // Include files from the common directory
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
